extends layout

block content
  .row
    .col-md-3.offset
      a.btn.btn-primary.btn-block(href='/users/new') Add
  .row
    each user in users
      .col-3
        .card
          .card-header
            h5= user.name
          .card-body
              p.card-text # #{user.id}
              p.card-text Name: #{user.name}
              p.card-text Email: #{user.email}
              p.card-text Password: #{user.password}
              p.card-text Token: #{user.token}
              
          .card-footer
            - let url = `/users/delete/${user.id}`;
            - let updateUrl = `/users/update/${user.id}`;
            .btn-group
              a.btn.btn-info Show
              a.btn.btn-warning(href=updateUrl) Update
              a.btn.btn-danger(href=url) Del