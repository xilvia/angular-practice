doctype html
html
  head
    title= title
    //-link(rel='stylesheet', href='/bootstrap/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='/bootswatch/dist/slate/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    html
  body
    nav.navbar.navbar-expand-lg.navbar-light.bg-light.sticky-top
      a.navbar-brand(href="#") Navbar
      button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
        span.navbar-toggler-icon 
      #navbarSupportedContent.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item.active
            a.nav-link(href="/") Home
          li.nav-item
            a.nav-link(href="/products") Products
          li.nav-item
            a.nav-link(href="/about") About
          li.nav-item
            a.nav-link(href="/contact") Contact
          li.a.nav-item
            a.nav-link(href="/users") Users
        ul.navbar-nav
          if user
            if user.id
              li 
                span #{ user.name }
                a.btn.btn-default(href="/logout") logout
            else
              li
                a.btn.btn-success(href="/login") login
         


    .container
      block content

    script(src="/javascripts/jquery.min.js")
    script(src="/bootstrap/dist/js/bootstrap.min.js")
