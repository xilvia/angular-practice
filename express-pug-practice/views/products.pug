extends layout

block content
  .row
    .col-md-3.offset
      a.btn.btn-primary.btn-block(href='/products/new') Add
  .row
    each product in products
      .col-3
        .card
          .card-header
            h5= product.name
          .card-body
              p.card-text # #{product.id}
              p.card-text Price: #{product.price}
              p.card-text Manufacturer: #{product.manufacturer}
              p.card-text Stock: #{product.stock}
              p.card-text isActive: #{product.active}
              input(type='checkbox' value='#{true}') 
          .card-footer
            - let url = `/products/delete/${product.id}`;
            - let updateUrl = `/products/update/${product.id}`;
            .btn-group
              a.btn.btn-info Show
              a.btn.btn-warning(href=updateUrl) Update
              a.btn.btn-danger(href=url) Del
