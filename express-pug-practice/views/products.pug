extends layout

block content
  .row
    each product in products
      .col-3
        .card
          .card-header
            h5= product.name
          .card-body
              p.card-text # #{product.id}
              p.card-text Price: #{product.price}
              p.card-text Manufacturer: #{product.manufacturer}
              p.card-text Stock: #{product.stock}
              p.card-text isActive: #{product.active}
              input(type='checkbox' value='#{true}') 
          .card-footer
            a.btn.btn-primary(href='#') Show
          
